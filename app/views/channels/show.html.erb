<p id="notice"><%= notice %></p>

<%= form_for @channel, url: {action: "show"}, html: {class: "nifty_form"} do |f| %>
	<%= f.text_field :querysc %>
	<%= f.submit "Search" %>
<% end %>

<% client = Soundcloud.new(:client_id => ENV["SOUNDCLOUD_ACCESS_TOKEN"]) %>
<% track = client.get('/resolve', :url => @channel.querysc) %>


<div id="sm2_player">
<ul  class="playlist">

<li><a  type="audio/mp3"  class="sm2_link" href="<%= track.stream_url %>?client_id=<%= ENV["SOUNDCLOUD_ACCESS_TOKEN"] %>"><%=track.title%></a></li>

</ul>
</div>
